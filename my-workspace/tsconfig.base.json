{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hkworkspace/shared/app-navigation/data-access": [
        "libs/shared/app-navigation/data-access/src/index.ts"
      ],
      "@hkworkspace/shared/app-navigation/feature": [
        "libs/shared/app-navigation/feature/src/index.ts"
      ],
      "@hkworkspace/shared/app-authentication/data-access": [
        "libs/shared/app-authentication/data-access/src/index.ts"
      ],
      "@hkworkspace/shared/app-authentication/feature": [
        "libs/shared/app-authentication/feature/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/trip-planning/feature": [
        "libs/hiking-ui/trip-planning/feature/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/trip-planning/data-access": [
        "libs/hiking-ui/trip-planning/data-access/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/hotels/data-access": [
        "libs/hiking-ui/hotels/data-access/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/hotels/feature": [
        "libs/hiking-ui/hotels/feature/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/ui-common/ui": [
        "libs/hiking-ui/ui-common/ui/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/ui-common/data-access": [
        "libs/hiking-ui/ui-common/data-access/src/index.ts"
      ],
      "@hkworkspace/hiking-ui/ui-common/feature": [
        "libs/hiking-ui/ui-common/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
